<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Recipes</h3>
  </div>
  <div class="panel-body">
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <ul>
          <li><a href="/recipes/<%= recipe.id %>"> <%= recipe.name %> </a></li>
        </ul>
      <% end %>
    <% else %>
      <p>There are no recipe currently in your box.</p>
    <% end %>
  </div>
</div>

<footer>
  <a href="/"><button type="button" name="button" class="btn">Home</button></a>
</footer>
